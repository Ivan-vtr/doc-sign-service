# ── Django ────────────────────────────────────────────────────────
DJANGO_SECRET_KEY=change-me-to-random-50-char-string
DJANGO_DEBUG=False
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.kz

# ── Database ─────────────────────────────────────────────────────
DB_NAME=signing_service
DB_USER=postgres
DB_PASSWORD=change-me-strong-password
# DB_HOST and DB_PORT are set by docker-compose, no need to change
# DB_HOST=db
# DB_PORT=5432

# ── Superuser (created automatically on first start) ─────────────
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_PASSWORD=change-me-strong-password
DJANGO_SUPERUSER_EMAIL=admin@example.com
DJANGO_SUPERUSER_IIN=000000000000

# ── Sigex ────────────────────────────────────────────────────────
SIGEX_BASE_URL=https://sigex.kz
SIGEX_TIMEOUT=30
SIGEX_QR_POLL_RETRIES=60
SIGEX_QR_POLL_INTERVAL=3

# ── File Storage: "local" or "s3" ────────────────────────────────
FILE_STORAGE_BACKEND=local

# ── S3 (only when FILE_STORAGE_BACKEND=s3) ───────────────────────
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_STORAGE_BUCKET_NAME=
# AWS_S3_ENDPOINT_URL=
# AWS_S3_REGION_NAME=

# ── CORS ─────────────────────────────────────────────────────────
CORS_ALLOWED_ORIGINS=http://localhost:3000

# ── Docker / Nginx ───────────────────────────────────────────────
APP_PORT=80
